{
	"name": "eleventy-web-starter",
	"version": "2.0.1",
	"description": "Eleventy Web Starter is a lightweight Eleventy boilerplate utilising, ESBuild Tailwind and PostCSS",
	"scripts": {
		"clean": "del dist",
		"dev:postcss": "postcss src/assets/css/*.css -o dist/assets/css/styles.min.css --watch --verbose",
		"dev:scripts": "esbuild src/assets/js/scripts.js --bundle --watch --outfile=dist/assets/js/scripts.min.js",
		"dev:11ty": "eleventy --serve --watch",
		"build:postcss": "NODE_ENV=production postcss src/assets/css/*.css -o src/_includes/styles.min.css",
		"build:11ty": "ELEVENTY_ENV=production eleventy",
		"build:scripts": "esbuild src/assets/js/scripts.js --bundle --minify --outfile=dist/assets/js/scripts.min.js",
		"lint": "eslint src --ext .js,.ts --fix",
		"lint:check": "eslint src --ext .js,.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint-and-format": "npm run lint && npm run format",
		"check-all": "npm run lint:check && npm run format:check",
		"dev": "run-p dev:*",
		"build": "run-s clean build:*",
		"prepare": "husky"
	},
	"author": "Chris Collins",
	"license": "ISC",
	"devDependencies": {
		"@11ty/eleventy": "3.0.0",
		"@eslint/js": "^9.39.1",
		"autoprefixer": "^10.4.21",
		"clean-css": "^5.3.2",
		"concurrently": "^8.2.2",
		"cssnano": "^7.0.6",
		"del-cli": "^6.0.0",
		"esbuild": "^0.25.2",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"htmlnano": "^2.1.1",
		"husky": "^9.1.7",
		"luxon": "^3.6.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"postcss-import": "^16.1.0",
		"postcss-import-ext-glob": "^2.1.1",
		"prettier": "^3.6.2",
		"prettier-plugin-jinja-template": "^2.1.0",
		"tailwindcss": "^3.3.5",
		"terser": "^5.39.0"
	}
}
